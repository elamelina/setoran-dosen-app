<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nama Surat -->
        <TextView
            android:id="@+id/tvNamaSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Surat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <!-- Syarat -->
        <TextView
            android:id="@+id/tvSyarat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Syarat"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:textColorSecondary" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatusSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Belum Setor"
            android:paddingTop="4dp"
            android:textColor="?android:textColorSecondary" />

        <!-- Tanggal Setor -->
        <TextView
            android:id="@+id/tvTanggalSetor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disetor: -"
            android:visibility="gone"
            android:paddingTop="2dp"
            android:textColor="?android:textColorSecondary" />

        <!-- Keterangan -->
        <TextView
            android:id="@+id/tvKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan: -"
            android:visibility="gone"
            android:paddingTop="2dp"
            android:textColor="?android:textColorSecondary" />

        <!-- Tombol Aksi -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnHapusSetoran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnTambahSetoran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
